rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow read/write access to all documents for any authenticated user.
      // WARNING: This is for development/demo purposes. 
      // For production, you should restrict access with tighter rules, e.g.:
      // allow read, write: if request.auth != null && request.auth.uid == resource.id;
      allow read, write: if request.auth != null;
    }
  }
}
